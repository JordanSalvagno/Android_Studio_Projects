<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9F9F9"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <com.android.volley.toolbox.NetworkImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/InterestedUserListItemUserImg"
        android:src="@drawable/elcacto"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="User Name"
        android:id="@+id/InterestedUserListItemUserName"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/InterestedUserListItemUserImg"
        android:ellipsize="end"
        android:singleLine="true" />
    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style= "?android:attr/ratingBarStyleSmall"
        android:numStars = "5"
        android:rating   = "5"
        android:stepSize = "0.1"
        android:isIndicator="true"
        android:gravity="end"
        android:id="@+id/InterestedUserListItemRating"
        android:layout_alignParentEnd="true"
        />

</RelativeLayout>